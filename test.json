{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Change in emissions of air pollutants, World, 1970 to 2022",
    "description": "A line chart showing the change in emissions of various air pollutants from 1970 to 2022.",
    "data": {
      "url": "change_air_pollutant_emissions.csv"
    },
    "transform": [
      {
        "filter": {
          "field": "Year",
          "range": [1970, 2022]
        }
      }
    ],
    "mark": "line",
    "encoding": {
      "x": {
        "field": "Year",
        "type": "temporal",
        "axis": {"title": null}
      },
      "y": {
        "field": "PercentChange",
        "type": "quantitative",
        "axis": {"title": "Change in emissions (%)"}
      },
      "color": {
        "field": "Pollutant",
        "type": "nominal",
        "legend": {
          "title": null,
          "orient": "right"
        }
      },
      "tooltip": [
        {"field": "Year", "type": "temporal", "title": "Year"},
        {"field": "Pollutant", "type": "nominal", "title": "Pollutant"},
        {"field": "PercentChange", "type": "quantitative", "title": "Change (%)"}
      ]
    }
  }
  